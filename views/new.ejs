<% include partials/header %>
<% include partials/navbar %>

<div style="max-width: 500px" class="mx-auto p-2">
    <h2 class="m-4 text-center"> Create a New Campground! </h2>
    <form action="/campgrounds" method="POST">
        <div class="form-group">
            <label for="name">Campground Name</label>
            <input type="text" class="form-control" id="name" placeholder="Enter name" name="name">
        </div>
        <div class="form-group">
            <label for="img">Image</label>
            <input type="text" class="form-control" id="img" placeholder="Enter image URL" name="img">
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary" style="width: 100%">Create New Camp</button>
        </div>
    </form>
    <p><a href="/campgrounds">Go to Camps</a></p>
</div>

